    "@std/assert": "jsr:@std/assert@1",
    "@std/cli": "jsr:@std/cli@^1.0.20",
    "react": "npm:react@^18.0.0",
    "ink": "npm:ink@^4.0.0",
    "react-test-renderer": "npm:react-test-renderer@^18.0.0",
    "octokit": "npm:octokit@^5.0.3",
    "@octokit/types": "npm:@octokit/types@^14.1.0"
  },
  "compilerOptions": {
    "noImplicitAny": false
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any"
      ]
    }
  }
